        <Label layoutX="30.0" layoutY="190.0" text="Order Date:" />
        <TextField fx:id="txtOrderDate" layoutX="120.0" layoutY="185.0" prefHeight="25.0" prefWidth="150.0" promptText="YYYY-MM-DD" />

        <Label layoutX="30.0" layoutY="230.0" text="City:" />
        <TextField fx:id="txtCity" layoutX="120.0" layoutY="225.0" prefHeight="25.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="270.0" text="Delivery Status:" />
        <TextField fx:id="txtDeliveryStatus" layoutX="120.0" layoutY="265.0" prefHeight="25.0" prefWidth="200.0" promptText="Ã–rn: Shipped, Pending" />

        <Button fx:id="btnSave" layoutX="40.0" layoutY="330.0" mnemonicParsing="false" onAction="#handleSave" prefWidth="80.0" text="Save" />
        <Button fx:id="btnUpdate" layoutX="130.0" layoutY="330.0" mnemonicParsing="false" onAction="#handleUpdate" prefWidth="80.0" text="Update" />
        <Button fx:id="btnDelete" layoutX="220.0" layoutY="330.0" mnemonicParsing="false" onAction="#handleDelete" prefWidth="80.0" text="Delete" />
        <Button fx:id="btnClose" layoutX="310.0" layoutY="330.0" mnemonicParsing="false" onAction="#handleClose" prefWidth="80.0" text="Close" />
    </children>
</AnchorPane>