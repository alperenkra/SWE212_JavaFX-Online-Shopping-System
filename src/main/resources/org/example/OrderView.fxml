<AnchorPane prefHeight="400.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.OrderController">
    <children>
        <Label layoutX="190.0" layoutY="20.0" text="ORDERS">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="70.0" text="Order Id:" />
        <TextField fx:id="txtOrderId" layoutX="120.0" layoutY="65.0" prefHeight="25.0" prefWidth="100.0" />
        <Button fx:id="btnFetch" layoutX="230.0" layoutY="65.0" mnemonicParsing="false" onAction="#handleFetch" prefHeight="25.0" prefWidth="90.0" text="Fetch Details" />

