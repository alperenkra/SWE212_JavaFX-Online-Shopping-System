<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.CustomerController">
    <children>
        <Label layoutX="155.0" layoutY="20.0" text="CUSTOMER">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="70.0" text="User Id:" />
        <TextField fx:id="txtUserId" layoutX="100.0" layoutY="65.0" prefHeight="25.0" prefWidth="149.0" />
        <Button fx:id="btnFetch" layoutX="260.0" layoutY="65.0" mnemonicParsing="false" onAction="#handleFetch" prefHeight="25.0" prefWidth="60.0" text="Fetch" />

        <Label layoutX="30.0" layoutY="110.0" text="Name:" />
        <TextField fx:id="txtName" layoutX="100.0" layoutY="105.0" prefHeight="25.0" prefWidth="220.0" />

        <Label layoutX="30.0" layoutY="150.0" text="Address:" />
        <TextField fx:id="txtAddress" layoutX="100.0" layoutY="145.0" prefHeight="25.0" prefWidth="220.0" />

        <Label layoutX="30.0" layoutY="190.0" text="Telephone:" />
        <TextField fx:id="txtTelephone" layoutX="100.0" layoutY="185.0" prefHeight="25.0" prefWidth="220.0" />

        <Button fx:id="btnSave" layoutX="30.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleSave" prefWidth="70.0" text="Save" />
        <Button fx:id="btnUpdate" layoutX="110.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleUpdate" prefWidth="70.0" text="Update" />
        <Button fx:id="btnDelete" layoutX="190.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleDelete" prefWidth="70.0" text="Delete" />
        <Button fx:id="btnClose" layoutX="270.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleClose" prefWidth="70.0" text="Close" />
    </children>
</AnchorPane>